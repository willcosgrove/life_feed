<div id="feed-items">
  <% @feed_items.each do |feed_item| %>
    <div class="row">
      <article class="span8 offset2 feed-item <%= feed_item.source %>">
        <header>
          <%= image_tag "#{feed_item.source}.png" %>
          <h1><%= feed_item.title %><small><%= feed_item.subtitle %></small></h1>
        </header>
        <div class="feed-item-inner">
          <%= feed_item.message.html_safe %>
        </div>
      </article>
    </div>
  <% end %>
</div>

<script type="text/html" id="feed-item-template">
  <div class="row hidden">
    <article class="span8 offset2 feed-item {{source}}">
      <header>
        <img src="/assets/{{source}}.png"/>
        <h1>{{title}}<small>{{subtitle}}</small></h1>
      </header>
      <div class="feed-item-inner">
        {{{message}}}
      </div>
    </article>
  </div>
</script>